<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.net.URL?>
<VBox fx:controller="Controller.AddExerciseSessionController" xmlns:fx="http://javafx.com/fxml" minHeight="200.0" minWidth="350.0">
    <children>
        <GridPane alignment="center" hgap="10" vgap="10" VBox.vgrow="ALWAYS">
            <TextField  id="txt_search" fx:id="txt_search" GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="20.0" prefWidth="150.0" promptText="To Search" />
            <Button  GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="20.0" prefWidth="150.0" mnemonicParsing="false" text="Search" onAction="#goSearch"/>
            <ComboBox id="Exercise" fx:id="Exercise" editable="true"  GridPane.columnIndex="0" GridPane.rowIndex="3" prefHeight="20.0" prefWidth="150.0" promptText="Select Exercise" >
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField  id="duration" fx:id="duration" GridPane.columnIndex="0" GridPane.rowIndex="4" prefHeight="20.0" prefWidth="150.0" promptText="Duration" />
            <TextField  id="calBurned" fx:id="calBurned" GridPane.columnIndex="1" GridPane.rowIndex="4" prefHeight="20.0" prefWidth="150.0" promptText="Calories Burned" />
            <Button  GridPane.columnIndex="1" GridPane.rowIndex="5" prefHeight="20.0" prefWidth="150.0" mnemonicParsing="false" text="Add Session" onAction="#AddExerciseSessionAction"/>
            <Button  GridPane.columnIndex="0" GridPane.rowIndex="5" prefHeight="20.0" prefWidth="150.0" mnemonicParsing="false" text="Go Back" onAction="#GoToDashButtonAction"/>
            <Label  id="errorMsg" fx:id="errorMsg" GridPane.columnIndex="0" GridPane.rowIndex="6" prefHeight="20.0" prefWidth="150.0" text=""/>
        </GridPane>
    </children>
    <stylesheets>
        <URL value="@myStyle.css" />
    </stylesheets>
</VBox>
